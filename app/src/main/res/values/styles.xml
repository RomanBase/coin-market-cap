<resources>

    <!-- Splash application theme. -->
    <style name="AppTheme.Splash" parent="AppTheme.Base">

        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <!-- Base theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>

        <item name="android:colorForeground">@color/background_color</item>
        <item name="android:navigationBarColor">@color/tint_dark_color</item>
    </style>

    <style name="AppTheme.CoinItem" parent="TextAppearance.AppCompat">

        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">

        <item name="android:textColor">@color/tint_dark_color</item>
        <item name="android:color">@color/tint_dark_color</item>
        <item name="colorControlNormal">@color/tint_dark_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>

    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">

        <item name="colorControlNormal">@color/tint_dark_color</item>

    </style>

</resources>
