<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="VM"
            type="com.ankhrom.coinmarketcap.viewmodel.dashboard.MarketViewModel" />

        <variable
            name="M"
            type="com.ankhrom.coinmarketcap.model.CoinsAdapterModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/coin_list_header"
            app:M="@{M}" />

        <com.ankhrom.base.custom.view.BaseListView
            android:id="@+id/items_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{M.adapter}" />

    </LinearLayout>

</layout>