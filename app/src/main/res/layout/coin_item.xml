<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="M"
            type="com.ankhrom.coinmarketcap.model.CoinItemModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base_half_padding"
        android:paddingEnd="@dimen/base_padding"
        android:paddingStart="@dimen/base_half_padding"
        android:paddingTop="@dimen/base_half_padding">

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.CoinItem"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="@{M.coin.rank}"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_small" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.CoinItem"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="@{M.coin.symbol}"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_highlight"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{M.coin.priceUsd}"
                android:textSize="@dimen/text_size_price" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{M.coin.supply}"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <com.ankhrom.coinmarketcap.view.AppTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{M.coin.percentChange24h}"
                android:textSize="@dimen/text_size_price"
                app:textColorResource="@{M.change_24h_color_res}" />

            <com.ankhrom.coinmarketcap.view.AppTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{M.coin.percentChange1h}"
                android:textSize="@dimen/text_size_small"
                app:textColorResource="@{M.change_1h_color_res}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{M.coin.marketCap}"
                android:textSize="@dimen/text_size_price" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{M.coin.volumeUsd}"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </LinearLayout>
</layout>