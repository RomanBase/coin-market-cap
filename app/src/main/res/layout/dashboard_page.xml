<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="VM"
            type="com.ankhrom.coinmarketcap.viewmodel.DashboardViewModel" />

        <variable
            name="M"
            type="com.ankhrom.coinmarketcap.model.DashboardModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/base_half_padding"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="@dimen/base_half_padding">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coin Market Cap"
                    android:textColor="@color/text_light_color"
                    android:textSize="@dimen/text_size_price"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{M.date}"
                    android:textColor="@color/text_light_color"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingBottom="@dimen/base_half_padding"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="@dimen/base_half_padding">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{M.marketCap}"
                    android:textColor="@color/text_light_color"
                    android:textSize="@dimen/text_size_price"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{M.marketVolume}"
                    android:textColor="@color/text_light_color"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/base_half_padding"
            android:paddingEnd="@dimen/base_padding"
            android:paddingStart="@dimen/base_half_padding"
            android:paddingTop="@dimen/base_half_padding">

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:text="#"
                android:textAlignment="center"
                android:textColor="@color/text_light_color" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="textStart"
                android:textColor="@color/text_light_color" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textAlignment="textEnd"
                android:textColor="@color/text_light_color" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change"
                android:textAlignment="textEnd"
                android:textColor="@color/text_light_color" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.CoinItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M. Cap"
                android:textAlignment="textEnd"
                android:textColor="@color/text_light_color" />

        </LinearLayout>

        <com.ankhrom.base.custom.view.BaseListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{M.adapter}" />

    </LinearLayout>

</layout>